<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/vouchersGridLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:columnCount="2"
    android:rowCount="8"
    android:padding="8dp">

    <!-- Row 1: Voucher Number -->
    <TextView
        android:id="@+id/voucherNumberLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Voucher Number"
        android:textSize="18sp"
        android:gravity="start"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:textColor="@color/darkblue" />

    <TextView
        android:id="@+id/voucherNumberView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:text=""
        android:textAlignment="viewStart"
        android:gravity="start"
        android:textSize="18sp"
        android:textColor="@color/black" />

    <!-- Row 2: Voucher Product -->
    <TextView
        android:id="@+id/voucherProductLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/productText"
        android:textSize="18sp"
        android:gravity="start"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:textColor="@color/darkblue" />

    <TextView
        android:id="@+id/voucherProductView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:text=""
        android:textAlignment="viewStart"
        android:gravity="start"
        android:textSize="18sp"
        android:textColor="@color/black" />

    <!-- Row 3: Voucher Merchant -->
    <TextView
        android:id="@+id/voucherMerchantLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/merchant"
        android:textSize="18sp"
        android:gravity="start"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:textColor="@color/darkblue" />

    <TextView
        android:id="@+id/voucherMerchantView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:text=""
        android:textAlignment="viewStart"
        android:gravity="start"
        android:textSize="18sp"
        android:textColor="@color/black" />

    <!-- Row 4: Voucher Date -->
    <TextView
        android:id="@+id/voucherDateLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/dateText"
        android:textSize="18sp"
        android:gravity="start"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:textColor="@color/darkblue" />

    <TextView
        android:id="@+id/voucherDateView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:text=""
        android:textAlignment="viewStart"
        android:gravity="start"
        android:textSize="18sp"
        android:textColor="@color/black" />

    <!-- Row 5: Voucher Amount -->
    <TextView
        android:id="@+id/voucherAmountLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/amountText"
        android:textSize="18sp"
        android:gravity="start"
        android:layout_row="4"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:textColor="@color/darkblue" />

    <TextView
        android:id="@+id/voucherAmountView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_row="4"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:text=""
        android:textAlignment="viewStart"
        android:gravity="start"
        android:textSize="18sp"
        android:textColor="@color/black" />

    <!-- Row 6: Voucher Currency -->
    <TextView
        android:id="@+id/voucherMeterViewLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/meterText"
        android:textSize="18sp"
        android:gravity="start"
        android:layout_row="5"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:textColor="@color/darkblue" />

    <TextView
        android:id="@+id/voucherMeterView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_row="5"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:text=""
        android:textAlignment="viewStart"
        android:gravity="start"
        android:textSize="18sp"
        android:textColor="@color/black" />

    <!-- Row 7: Voucher Buyer Mobile Number -->
    <TextView
        android:id="@+id/voucherBuyerMobileNumberLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/buyerMobileText"
        android:textSize="18sp"
        android:gravity="start"
        android:layout_row="6"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:textColor="@color/darkblue" />

    <TextView
        android:id="@+id/voucherBuyerMobileNumberView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_row="6"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:text=""
        android:textAlignment="viewStart"
        android:gravity="start"
        android:textSize="18sp"
        android:textColor="@color/black" />

    <!-- Row 8: Voucher Beneficiary Mobile Number -->
    <TextView
        android:id="@+id/voucherBeneficiaryMobileNumberLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/beneficiaryMobileText"
        android:textSize="18sp"
        android:gravity="start"
        android:layout_row="7"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:textColor="@color/darkblue" />

    <TextView
        android:id="@+id/voucherBeneficiaryMobileNumberView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_row="7"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:text=""
        android:textAlignment="viewStart"
        android:gravity="start"
        android:textSize="18sp"
        android:textColor="@color/black" />

</GridLayout>
